@model ProjetoFinal.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/css/Login.css" rel="stylesheet"/>

<h1 class="titulo">Login</h1>
<h4 class="titulo2">Digite o Email e a Senha para realizar o Login.</h4>
<hr />
<section class="Quadro">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UsuarioEmail" class="control-label"></label>
                    <input asp-for="UsuarioEmail" class="form-control input" />
                    <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioSenha" class="control-label"></label>
                    <input asp-for="UsuarioSenha" class="form-control input" />
                    <span asp-validation-for="UsuarioSenha" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input type="submit" value="ENTRAR" class="btn btn-primary" />
                </div>
                <br />
                <h3>@ViewBag.Mensagem</h3>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
